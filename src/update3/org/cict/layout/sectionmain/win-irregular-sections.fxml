<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="application_root" prefHeight="700.0" prefWidth="1000.0" styleClass="metro-base-color" stylesheets="@metro-ui.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
         <children>
            <Label fx:id="lbl_header_section_type" maxWidth="1.7976931348623157E308" styleClass="metro-title-1" text="Special Class" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <JFXButton fx:id="btn_create_class" prefWidth="200.0" style="-fx-border-color: #FFFFFF;" styleClass="metro-nav-button" text="Create Class" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btn_back" prefWidth="200.0" style="-fx-border-color: #FFFFFF;" styleClass="metro-nav-button" text="Back" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font>
            </JFXButton>
         </children>
         <padding>
            <Insets left="10.0" right="20.0" />
         </padding>
      </HBox>
      <HBox prefWidth="200.0" spacing="30.0">
         <children>
            <Label fx:id="lbl_current_term" graphicTextGap="10.0" styleClass="metro-subtitle-1" text="My Sample Semester" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../section_images/calendar_white.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label fx:id="lbl_curriculum_code" graphicTextGap="10.0" styleClass="metro-subtitle-1" text="BSIT (16-17)" textFill="WHITE" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../section_images/curriculum_white.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label fx:id="lbl_curriculum_type" graphicTextGap="10.0" styleClass="metro-subtitle-1" text="Consequent Curriculum" textFill="WHITE" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../section_images/cur_type.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <StackPane fx:id="stack_main" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="20.0" top="30.0" />
         </VBox.margin>
         <children>
            <VBox fx:id="vbox_section" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" styleClass="metro-table" stylesheets="@metro-ui-table.css" />
         </children>
      </StackPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
