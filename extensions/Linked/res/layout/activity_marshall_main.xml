<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pnl_marshall_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jhmvin.linked.MarshallMain" >

    <!-- HEADER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#50FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingTop="0dp"
            android:src="@drawable/cict_logo" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:src="@drawable/link_cict_marshall" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/bulsulogo" />
    </LinearLayout>
    <!-- END HEADER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:src="@drawable/id" />

        <EditText
            android:id="@+id/txt_studentNumber"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Student Number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_color"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/search50" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/scan" />
    </LinearLayout>

    <!-- landing for none -->

    <LinearLayout
        android:id="@+id/pnl_landing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/link_landing" />
    </LinearLayout>

    <!-- SCROLLER -->

    <ScrollView
        android:id="@+id/pnl_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_button"
                android:src="@drawable/defaultpic" />

            <TextView
                android:id="@+id/lbl_studentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="2014123456"
                android:textColor="@color/text_white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Kimi No Nawa?"
                android:textColor="@color/text_white"
                android:textSize="25sp" />

            <!-- DETAILS HOLDER -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp" >

                <!-- COURSE -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/course" />

                    <TextView
                        android:id="@+id/lbl_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="BS Sleeping Everyday"
                        android:textColor="@color/text_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Number -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/stats" />

                    <TextView
                        android:id="@+id/lbl_listing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Inline # 41"
                        android:textColor="@color/text_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- GENDER -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/gender" />

                    <TextView
                        android:id="@+id/lbl_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Gender Equality"
                        android:textColor="@color/text_white"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- IMEI -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/lbl_imei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="default"
                        android:textColor="@color/text_white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Add To List"
                android:textColor="#80FFFFFF" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Update Info"
                android:textColor="#80FFFFFF" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_button"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Back"
                android:textColor="#80FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#50FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/link_affiliate_default" />

        <TextView
            android:id="@+id/lbl_showinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CURSOR | Jhon Melvin"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/link_exit" />
    </LinearLayout>

</LinearLayout>